{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "downlevelIteration": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "allowJs": true,
    "baseUrl": ".",
    "outDir": "./dist",
    "rootDir": "./src",
    "sourceMap": true,
    "typeRoots": [
      "./node_modules/@types/"
    ],
    "paths": {
      "@/*": [
        "src/*"
      ],
      "@middleware/*": [
        "src/lib/middleware/*"
      ]
    }
  },
  "include": [
    "src/**/*",
  ],
  "exclude": [
    "node_modules"
  ]
}